<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="fill_parent"
android:background="@drawable/limestone_window"
android:layout_height="fill_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:gravity="center_horizontal">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" android:orientation="vertical">

<TextView
    android:text="Cafeterias"
    android:id="@+id/FoodTitle"
    style="@style/Title"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:textSize="35sp"
    android:layout_centerHorizontal="true"
    android:gravity="center_horizontal" />

            <Space
                android:layout_width="fill_parent"
                android:layout_height="@dimen/space" />

<LinearLayout
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:id="@+id/linearLayout"

    android:layout_marginBottom="@dimen/button_spacing">


    <Button
        android:layout_width="0dp"
        android:layout_height="@dimen/building_button_height"
        android:text="Ban-Righ\nCafeteria"
        style="@style/Type2"
        android:background="@drawable/button_building"
        android:id="@+id/Ban"
        android:textSize="@dimen/building_button_text_size"
        android:layout_margin="5dp"
        android:layout_weight="1"
        android:textAllCaps="false"/>


</LinearLayout>

<LinearLayout
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:id="@+id/linearLayout2"
    android:layout_marginBottom="@dimen/button_spacing"
    android:gravity="center"
 >

    <Button
        android:layout_width="0dp"
        android:layout_height="@dimen/building_button_height"
        android:layout_weight="1"
        android:text="Leonard\nCafeteria"
        android:id="@+id/Lenny"
        style="@style/Type2"
        android:background="@drawable/button_building"
        android:textSize="@dimen/building_button_text_size"
        android:layout_margin="5dp"
        android:textAllCaps="false"/>





</LinearLayout>

<LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/linearLayout3"
            android:layout_marginBottom="@dimen/button_spacing"
            android:gravity="center">



    <Button
        android:layout_width="0dp"
        android:layout_height="@dimen/building_button_height"
        android:layout_weight="1"
        android:text="Location 21"
        android:id="@+id/location21"
        style="@style/Type2"
        android:background="@drawable/button_building"
        android:textSize="@dimen/building_button_text_size"
        android:layout_margin="5dp"
        android:textAllCaps="false"/>




</LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:id="@+id/linearLayout4"
                android:layout_marginBottom="@dimen/button_spacing"
                android:gravity="center">


                <Button
                    android:layout_width="0dp"
                    android:layout_height="@dimen/building_button_height"
                    android:text="The Lazy\nScholar"
                    android:id="@+id/Lazy"
                    style="@style/Type2"
                    android:background="@drawable/button_building"
                    android:layout_weight="1"
                    android:textSize="@dimen/building_button_text_size"
                    android:layout_margin="5dp"
                    android:textAllCaps="false"/>



            </LinearLayout>






    </LinearLayout></ScrollView>


</RelativeLayout>

