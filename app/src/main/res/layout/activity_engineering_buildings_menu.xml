<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:background="#a460ec"
    android:layout_height="fill_parent">
    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:rowCount="50"
        android:columnCount="6"
        android:orientation="horizontal">

        <TextView android:layout_row="0"
            android:layout_column="1"
            android:text="@string/EngTitle"
            android:id="@+id/EngTitle"
            style="@style/Title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <Button
            android:layout_width="113dp"
            android:layout_height="90dp"
            android:text="Chernoff\nHall"
            android:id="@+id/Chernoff"
            style="@style/Type1"
            android:layout_row="1"
            android:layout_column="1"
            android:layout_margin="3dp"
            android:layout_marginLeft="4dp" />

        <Button
            android:layout_width="113dp"
            android:layout_height="90dp"
            android:text="Clark \nHall"
            android:id="@+id/Clark"
            style="@style/Type2"
            android:layout_row="1"
            android:layout_column="3"
            android:layout_margin="3dp" />

        <Button
            android:layout_width="113dp"
            android:layout_height="90dp"
            android:text="Dupuis\nHall"
            android:id="@+id/Dupuis"
            style="@style/Type1"
            android:layout_row="1"
            android:layout_column="5"
            android:layout_margin="3dp"
            android:layout_marginRight="4dp" />

        <Button
            android:layout_width="113dp"
            android:layout_height="90dp"
            android:text="Ellis\nHall"
            style="@style/Type2"
            android:id="@+id/Ellis"
            android:layout_row="3"
            android:layout_column="1"
            android:layout_margin="3dp"
            android:layout_marginLeft="4dp" />

        <Button
            android:layout_width="113dp"
            android:layout_height="90dp"
            android:text="Goodwin \nHall"
            style="@style/Type1"
            android:id="@+id/Goodwin"
            android:layout_row="3"
            android:layout_column="3"
            android:layout_margin="3dp" />

        <Button
            android:layout_width="113dp"
            android:layout_height="90dp"
            android:text="ILC\n"
            style="@style/Type2"
            android:id="@+id/ILC"
            android:layout_row="3"
            android:layout_column="5"
            android:layout_margin="3dp"
            android:layout_marginRight="4dp" />

        <Button
            android:layout_width="113dp"
            android:layout_height="90dp"
            android:text="Innovation\nCommons"
            style="@style/Type1B"
            android:id="@+id/IC"
            android:layout_row="5"
            android:layout_column="1"
            android:layout_margin="3dp"
            android:layout_marginLeft="4dp" />

        <Button
            android:layout_width="113dp"
            android:layout_height="90dp"
            android:text="Mclaughlin\nHall"
            android:id="@+id/Maclaughlin"
            style="@style/Type2B"
            android:layout_row="5"
            android:layout_column="3"
            android:layout_margin="3dp" />

        <Button
            android:layout_width="113dp"
            android:layout_height="90dp"
            android:text="Miller\nHall"
            style="@style/Type1"
            android:id="@+id/Miller"
            android:layout_row="5"
            android:layout_column="5"
            android:layout_margin="3dp"
            android:layout_marginRight="4dp" />


        <Button
            android:layout_width="113dp"
            android:layout_height="90dp"
            android:text="Stirling\nHall"
            style="@style/Type2"
            android:id="@+id/Stirling"
            android:layout_row="7"
            android:layout_column="1"
            android:layout_margin="3dp"
            android:layout_marginLeft="4dp" />

        <Button
            android:layout_width="113dp"
            android:layout_height="90dp"
            android:text="Walter\nLight"
            android:id="@+id/Walter"
            style="@style/Type2"
            android:layout_row="7"
            android:layout_column="5"
            android:layout_margin="3dp"
            android:layout_marginRight="4dp" />


</GridLayout>
    </ScrollView>