<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:background="@drawable/grant_side"
    android:layout_height="fill_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:gravity="center_horizontal">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
    <TextView
        android:text="@string/EngTitle"
        android:id="@+id/EngTitle"
        style="@style/Title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textSize="35sp"
        android:layout_centerHorizontal="true"
        android:gravity="center_horizontal"
         />

            <Space
                android:layout_width="fill_parent"
                android:layout_height="@dimen/space" />
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/linearLayout"
        android:layout_marginBottom="@dimen/button_spacing"
        android:gravity="center">


        <Button
            android:layout_width="fill_parent"
            android:layout_height="@dimen/building_button_height"
            android:layout_weight="1"
            android:text="Chernoff\nHall"
            android:id="@+id/Chernoff"
            style="@style/Type2"
            android:background="@drawable/button_building"
            android:textSize="@dimen/button_text_size"
            android:layout_margin="5dp"
            />


        <Button
            android:layout_width="fill_parent"
            android:layout_height="@dimen/building_button_height"
            android:layout_weight="1"
            android:text="Clark \nHall"
            android:id="@+id/Clark"
            style="@style/Type2"
            android:background="@drawable/button_building"
            android:textSize="@dimen/button_text_size"
            android:layout_margin="5dp" />

        <Button
            android:layout_width="fill_parent"
            android:layout_height="@dimen/building_button_height"
            android:layout_weight="1"
            android:text="Dupuis\nHall"
            android:id="@+id/Dupuis"
            style="@style/Type2"
            android:background="@drawable/button_building"
            android:textSize="@dimen/button_text_size"
            android:layout_margin="5dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/linearLayout2"
        android:layout_below="@+id/linearLayout"
        android:layout_marginBottom="@dimen/button_spacing"
        android:gravity="center"
       >

        <Button
            android:layout_width="fill_parent"
            android:layout_height="@dimen/building_button_height"
            android:layout_weight="1"
            android:text="Ellis\nHall"
            style="@style/Type2"
            android:background="@drawable/button_building"
            android:id="@+id/Ellis"
            android:textSize="@dimen/button_text_size"
            android:layout_margin="5dp" />

        <Button
            android:layout_width="fill_parent"
            android:layout_height="@dimen/building_button_height"
            android:layout_weight="1"
            android:text="Goodwin \nHall"
            style="@style/Type2"
            android:background="@drawable/button_building"
            android:id="@+id/Goodwin"
            android:textSize="@dimen/button_text_size"
            android:layout_margin="5dp" />

        <Button
            android:layout_width="fill_parent"
            android:layout_height="@dimen/building_button_height"
            android:layout_weight="1"
            android:text="ILC\n"
            style="@style/Type2"
            android:background="@drawable/button_building"
            android:id="@+id/ILC"
            android:textSize="@dimen/button_text_size"
            android:layout_margin="5dp" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/linearLayout3"
        android:layout_below="@+id/linearLayout2"
        android:layout_marginBottom="@dimen/button_spacing"
        android:gravity="center">

        <Button
            android:layout_width="fill_parent"
            android:layout_height="@dimen/building_button_height"
            android:layout_weight="1"
            android:text="Innovation\nCommons"
            style="@style/Type2"
            android:background="@drawable/button_building"
            android:id="@+id/IC"
            android:textSize="@dimen/button_text_size"
            android:layout_margin="5dp" />

        <Button
            android:layout_width="fill_parent"
            android:layout_height="@dimen/building_button_height"
            android:layout_weight="1"
            android:text="Jeffery\nHall"
            android:id="@+id/Jeffery"
            style="@style/Type2"
            android:background="@drawable/button_building"
            android:textSize="@dimen/button_text_size"
            android:layout_margin="5dp" />

        <Button
            android:layout_width="fill_parent"
            android:layout_height="@dimen/building_button_height"
            android:layout_weight="1"
            android:text="Mclaughlin\nHall"
            android:id="@+id/Mclaughlin"
            style="@style/Type2"
            android:background="@drawable/button_building"
            android:textSize="@dimen/button_text_size"
            android:layout_margin="5dp" />



    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/linearLayout4"
        android:layout_below="@id/linearLayout3"

        android:gravity="center"
        >

        <Button
            android:layout_width="fill_parent"
            android:layout_height="@dimen/building_button_height"
            android:layout_weight="1"
            android:text="Miller\nHall"
            style="@style/Type2"
            android:background="@drawable/button_building"
            android:id="@+id/Miller"
            android:textSize="@dimen/button_text_size"
            android:layout_margin="5dp" />


        <Button
            android:layout_width="fill_parent"
            android:layout_height="@dimen/building_button_height"
            android:layout_weight="1"
            android:text="Stirling\nHall"
            style="@style/Type2"
            android:background="@drawable/button_building"
            android:id="@+id/Stirling"
            android:textSize="@dimen/button_text_size"
            android:layout_margin="5dp" />

        <Button
            android:layout_width="fill_parent"
            android:layout_height="@dimen/building_button_height"
            android:layout_weight="1"
            android:text="Walter\nLight"
            android:id="@+id/Walter"
            style="@style/Type2"
            android:background="@drawable/button_building"
            android:textSize="@dimen/button_text_size"
            android:layout_margin="5dp"/>



    </LinearLayout>


</RelativeLayout>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>