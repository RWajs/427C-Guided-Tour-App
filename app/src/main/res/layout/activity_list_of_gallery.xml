<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:background="@drawable/limestone_zoomed">


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Engineering Buildings"
        android:id="@+id/buttonEngBuildings"
        android:background="@drawable/button_back"

        android:layout_marginTop="131dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="10dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Non-Engineering Buildings"
        android:id="@+id/buttonNonEngBuildings"
        android:background="@drawable/button_back"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/buttonEngBuildings"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="10dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Food Buildings"
        android:id="@+id/buttonFoodBuildings"
        android:background="@drawable/button_back"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/buttonNonEngBuildings"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="10dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Historical Buildings"
        android:id="@+id/buttonHistoricalBuildings"
        android:background="@drawable/button_back"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/buttonFoodBuildings"
        android:layout_alignParentLeft="true" />

</RelativeLayout>
