<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.ryan.queensutour.GoToILC"
    android:background="@drawable/limestone_dark">
    <TextView android:text="To begin to the tour, head to the Integrated Learning Centre (ILC)"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:textColor="#f2edf6"
        android:layout_alignParentRight="false"
        android:gravity="center_vertical|center_horizontal"
        android:id="@+id/id1"/>
    <TextView android:text="\nThe ILC is located at the intersection Union and Division Street. "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/id1"
        android:textSize="22sp"
        android:textColor="#f2edf6"
        android:id="@+id/id2"
         />
    <Button
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:text="Navigate to the ILC"
        android:layout_below="@+id/id2"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20dp"
        android:background="@drawable/button_building"
        android:id="@+id/id3"
        android:layout_marginBottom="10dp"
        android:textColor="#f2edf6"/>
    <TextView android:text="Once you are there click the button below to start your tour. \n\nFollow the black route for a tour around campus and click on the markers twice to get more information about each building."
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/id3"
        android:textSize="22sp"
        android:textColor="#f2edf6"
        android:id="@+id/id4"
        android:layout_marginTop="10dp"/>
    <Button
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:text="Begin Tour!"
        android:layout_below="@+id/id4"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20dp"
        android:background="@drawable/button_building"
        android:id="@+id/id5"
        android:textColor="#f2edf6"/>
</RelativeLayout>