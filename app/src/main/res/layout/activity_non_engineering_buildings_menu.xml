<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:background="@drawable/limestone_back"
    android:layout_height="fill_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:gravity="center_horizontal">

<ScrollView
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
    <TextView
        android:text="Non-Engineering\nBuildings"
        android:id="@+id/MiscTitle"
        style="@style/Title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textSize="31sp"

        android:gravity="center_horizontal"
        android:layout_centerHorizontal="true" />
    <Space
        android:layout_width="fill_parent"
        android:layout_height="@dimen/space" />
<RelativeLayout
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_centerVertical="true">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/linearLayout"
       android:layout_alignParentTop="true"
        android:layout_marginBottom="@dimen/button_spacing"
        android:gravity="center">

        <Button
            android:layout_width="fill_parent"
            android:layout_height="@dimen/building_button_height"

            android:layout_weight="1"
            android:text="Athletics and\nRec. Centre"
            style="@style/Type2"
            android:background="@drawable/button_building"
            android:id="@+id/Arc"
            android:textSize="@dimen/button_text_size"
            android:layout_margin="5dp" />

        <Button
            android:layout_width="fill_parent"
            android:layout_height="@dimen/building_button_height"
            android:layout_weight="1"
            android:text="Douglas\nLibrary"
            android:id="@+id/Douglas"
            style="@style/Type2"
            android:background="@drawable/button_building"
            android:layout_margin="5dp"
            android:textSize="@dimen/button_text_size"/>

        <Button
            android:layout_width="fill_parent"
            android:layout_height="@dimen/building_button_height"
            android:layout_weight="1"
            android:text="Gordon\n Hall"
            android:id="@+id/Gordon"
            style="@style/Type2"
            android:background="@drawable/button_building"
            android:layout_margin="5dp"
            android:textSize="@dimen/button_text_size"/>



    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/linearLayout2"
        android:layout_below="@+id/linearLayout"
        android:layout_marginBottom="@dimen/button_spacing"
        android:gravity="center"
        >

       <Button
           android:text="John Deutsch Uni. Centre"
           style="@style/Type2"
           android:background="@drawable/button_building"
           android:id="@+id/JDUC"
           android:layout_width="fill_parent"
           android:layout_height="@dimen/building_button_height"
           android:layout_weight="1"
           android:layout_margin="5dp"
           android:textSize="@dimen/button_text_size"/>


        <Button
            android:layout_width="fill_parent"
            android:layout_height="@dimen/building_button_height"
            android:layout_weight="1"
            android:text="Mac-Corry\nHall"
            android:id="@+id/MCor"
            style="@style/Type2"
            android:background="@drawable/button_building"
            android:layout_margin="5dp"
            android:textSize="@dimen/button_text_size"/>

        <Button
            android:layout_width="fill_parent"
            android:layout_height="@dimen/building_button_height"
            android:layout_weight="1"
            android:text="Nixon\nField"
            android:id="@+id/Nixon"
            style="@style/Type2"
            android:background="@drawable/button_building"
            android:layout_margin="5dp"
            android:textSize="@dimen/button_text_size"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/linearLayout3"
        android:layout_below="@+id/linearLayout2"
        android:gravity="center">


        <Button
            android:layout_width="fill_parent"
            android:layout_height="@dimen/building_button_height"
            android:layout_weight="1"
            android:text="Stauffer\nLibrary"
            style="@style/Type2"
            android:background="@drawable/button_building"
            android:id="@+id/Stauff"
            android:layout_margin="5dp"
            android:textSize="@dimen/button_text_size"/>

        <Button
            android:layout_width="fill_parent"
            android:layout_height="@dimen/building_button_height"
            android:layout_weight="1"
            android:text="Tindall\nField"
            android:id="@+id/Tindall"
            style="@style/Type2"
            android:background="@drawable/button_building"
            android:layout_margin="5dp"
            android:textSize="@dimen/button_text_size"/>
    </LinearLayout>
</RelativeLayout>
    </LinearLayout>
</ScrollView>
</RelativeLayout>