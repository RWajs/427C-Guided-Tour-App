<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:background="@drawable/limestone_back"
    android:layout_height="fill_parent">


    <TextView
        android:text="Non-Engineering Buildings"
        android:id="@+id/MiscTitle"
        style="@style/Title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="31dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/linearLayout"
        android:layout_below="@+id/MiscTitle"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="30dp">

        <Button
            android:layout_width="105dp"
            android:layout_height="85dp"
            android:layout_weight="1"
            android:text="Athletic\nRec Centre"
            style="@style/Type2"
            android:background="@drawable/button_building"
            android:id="@+id/Arc"
            android:layout_margin="5dp" />

        <Button
            android:layout_width="105dp"
            android:layout_height="85dp"
            android:layout_weight="1"
            android:text="Douglas\nLibrary"
            android:id="@+id/Douglas"
            style="@style/Type2"
            android:background="@drawable/button_building"
            android:layout_margin="5dp" />

        <Button
            android:layout_width="105dp"
            android:layout_height="85dp"
            android:layout_weight="1"
            android:text="Gordon\n Hall"
            android:id="@+id/Gordon"
            style="@style/Type2"
            android:background="@drawable/button_building"
            android:layout_margin="5dp" />



    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/linearLayout2"
        android:layout_below="@+id/linearLayout"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="5dp">

       <Button
           android:text="John Deutsch Uni. Centre"
           style="@style/Type2"
           android:background="@drawable/button_building"
           android:id="@+id/JDUC"
           android:layout_width="105dp"
           android:layout_height="85dp"
           android:layout_weight="1"
           android:layout_margin="5dp" />


        <Button
            android:layout_width="105dp"
            android:layout_height="85dp"
            android:layout_weight="1"
            android:text="Mac-Corry\nHall"
            android:id="@+id/MCor"
            style="@style/Type2"
            android:background="@drawable/button_building"
            android:layout_margin="5dp" />

        <Button
            android:layout_width="105dp"
            android:layout_height="85dp"
            android:layout_weight="1"
            android:text="Nixon\nField"
            android:id="@+id/Nixon"
            style="@style/Type2"
            android:background="@drawable/button_building"
            android:layout_margin="5dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/linearLayout3"
        android:layout_below="@+id/linearLayout2"
        android:layout_alignParentStart="true">


        <Button
            android:layout_width="105dp"
            android:layout_height="85dp"
            android:layout_weight="1"
            android:text="Stauffer\nLibrary"
            style="@style/Type2"
            android:background="@drawable/button_building"
            android:id="@+id/Stauff"
            android:layout_margin="25dp" />

        <Button
            android:layout_width="105dp"
            android:layout_height="85dp"
            android:layout_weight="1"
            android:text="Tindall\nField"
            android:id="@+id/Tindall"
            style="@style/Type2"
            android:background="@drawable/button_building"
            android:layout_margin="25dp" />
    </LinearLayout>
</RelativeLayout>